{
  "name": "boulody-electron",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:shared": "cd packages/shared && npx tsc --watch",
    "dev:renderer": "cd packages/renderer && npx vite",
    "dev:main": "cd packages/main && npx tsc --watch",
    "dev:electron": "npx wait-on http://localhost:5173 && npx cross-env NODE_ENV=development npx electron ./packages/main/dist/index.js",
    "dev": "npx concurrently -k \"pnpm:dev:*\"",
    "build:shared": "cd packages/shared && npx tsc",
    "build:renderer": "cd packages/renderer && pnpm run build",
    "build:main": "cd packages/main && npx tsc",
    "build": "pnpm run build:shared && pnpm run build:main && pnpm run build:renderer",
    "start": "npx cross-env NODE_ENV=production npx electron ./packages/main/dist/index.js",
    "package": "npx tsx scripts/package.ts",
    "clean": "npx rimraf packages/*/dist dist dist-electron node_modules/.tmp",
    "type-check": "npx tsc --noEmit",
    "lint": "npx eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.4"
  }
}
